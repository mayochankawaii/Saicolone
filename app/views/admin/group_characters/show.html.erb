<div class="container">
  <div class="row">
    <div class="col-12">
      <h4>キャラクター詳細</h4>

      <div class="row">
        <div class="col-4 character-img">
          <%= image_tag @character.get_image, class: "character-img-fluid" %>
        </div>
        <div class="col-md-6">
          <table class="table">
            <tr>
              <td width="140">登録ユーザー</td>
              <td><%= @character.user.name %></td>
            </tr>
            <tr>
              <td width="140">キャラクター名</td>
              <td><%= @character.name %></td>
            </tr>
            <tr>
              <td width="140">ジャンル</td>
              <td><%= Genre.find(@character.genre_id).name %></td>
            </tr>
            <tr>
              <td width="140">ステータス</td>
              <td><%= @character.status %></td>
            </tr>
          </table>

          <div style="padding: 0.75rem;">
          <% if @character.description.present? %>
            キャラクター説明<br><br>
            <%= safe_join(@character.description.split("\n"),tag(:br))%><br>
          <% end %>

          <br></br>
            <div class="justify-content-end">
              <%= link_to "グループから外す", admin_group_group_character_path(@group, @character), method: :delete, data: { confirm: 'このキャラクターをグループから外しますか？' }, class: "btn btn-danger destroy_character_#{@character.id}"%>
              <%= link_to "グループに戻る", admin_group_path(@group), class:"btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>