<div class="container">
  <div class="row">
    <div class="col">
      <h4>ジャンル一覧・追加</h4>
      <br>
      <%= form_with(model: [:admin, @genre]) do |f| %>
        <p>ジャンル名　　<%= f.text_field :name %>
          <%= f.submit '新規登録', class: "btn btn-success" %>
        </p>
      <% end %>
      <!--空間を作る、テーブルの幅を小さくする-->
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
            <th width="140"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
            <td><%= genre.name %></td>
            <td></td>
            <td style="text-align-last:right">
              <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-primary" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>