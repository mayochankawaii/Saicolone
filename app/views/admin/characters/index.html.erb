<h4 style="padding-left: 10px;">キャラクター一覧</h4>
<br>
<table class="table table-bordered">
  <tr class="table-active">
    <!--タグの中にbrタグを入れることで空白のセルを作れる-->
    <th>ｷｬﾗｸﾀｰ</th>
    <th>一覧</th>
    <th width="90">ジャンル</th>
    <th width="100"><br></th>
  </tr>
    <% @characters.each do |character| %>
    <tr>
      <td width="80">
        <div style="max-height: 280px; overflow: hidden;">
          <%= link_to admin_character_path(character) do %>
            <%= image_tag character.get_image, style: "object-fit: contain; width: 60px; height: 60px; object-position: center;" %>
          <% end %>
        </div>
      </td>
      <td style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 0;">
        <%= link_to character.name,admin_character_path(character) %>
      </td>
      <td style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 0;">
        <%= character.genre ? character.genre.name : 'ジャンルが設定されていません' %>
      </td>
      <td>
        <%= link_to '削除', admin_character_path(character), method: :delete, data: { confirm: '本当に削除しますか?' },class: "btn btn-sm btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tr>
</table>