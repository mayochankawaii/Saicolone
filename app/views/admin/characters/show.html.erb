<div class="container">
  <div class="row">
    <div class="col-12">
      <h4>キャラクター詳細</h4>

      <div class="row">
        <div class="col-4 character-img">
          <%= image_tag @character.get_image, class: "character-img-fluid" %>
        </div>
        <div class="col-md-6">
          <table class="table">
            <tr>
              <td width="140">登録ユーザー</td>
              <td><%= @character.user.name %></td>
            </tr>
            <tr>
              <td>キャラクター名</td>
              <td><%= @character.name %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= Genre.find(@character.genre_id).name %></td>
            </tr>
            <tr>
              <td>ステータス</td>
              <td><%= @character.status %></td>
            </tr>
          </table>

          <div style="padding: 0.75rem;">
          <% if @character.description.present? %>
            キャラクター説明<br><br>
            <%= safe_join(@character.description.split("\n"),tag(:br))%><br>
          <% end %>

          <br></br>
            <div class="justify-content-end">
              <%= link_to "キャラクター一覧へ", admin_characters_path, class:"btn btn-primary" %>
              <%= link_to '削除', admin_character_path(@character), method: :delete, data: { confirm: '本当に削除しますか?' },class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>