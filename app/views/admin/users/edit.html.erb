<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5"><%= @user.name %>さんの情報編集</h4>
    <%= form_with model: @user,url: admin_user_path(@user) do |f| %>
      <table class="table table-borderless">

        <tr>
          <td>ユーザーID</td>
          <td><%= @user.id %></td>
        </tr>

        <tr>
          <td>ユーザー名</td>
          <td><%= f.text_field :name %></td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
          <td></td>
        </tr>

        <tr>
          <td>ステータス</td>
          <td>
            <%= f.radio_button :is_deleted, :false %>
            <%= f.label :is_deleted, "有効", { value: :false }  %>

            <%= f.radio_button :is_deleted, :true %>
            <%= f.label :is_deleted, "退会済", { value: :true } %>
          </td>
        </tr>

        <tr>
          <td></td>
          <td><%= f.submit "変更を保存", class:"btn btn-success" %></td>
        </tr>

      </table>
    <% end %>
    </div>
  </div>
</div>