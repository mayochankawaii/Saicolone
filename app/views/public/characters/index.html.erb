<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="d-flex justify-content-between">
      <h4>キャラクター一覧</h4>
      <%= link_to new_character_path, class: "btn btn-flat" do %>
        <span>キャラクター登録</span>
      <% end %>
      </div>
      <div class="row">
        <% @characters.each do |character| %>
          <div class="col-md-3">
            <div class="card">
              <%= link_to character_path(character), class: "card-link" do %>
              <div style="max-width: 100%; max-height: 180px; overflow: hidden; position: relative;">
                <%#= image_tag character.image, class: "card-img-top", style: "max-width: 100%; flex-shrink:0;" %>
                <%= image_tag character.image, class: "card-img-top" %>
              </div>
              <div class="card-body">
                <h6 class="card-title"><%= character.name %></h6>
                <p class="card-text"><%= Genre.find(character.genre_id).name %></p>
              </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>