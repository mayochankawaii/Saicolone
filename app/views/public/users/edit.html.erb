<div class="container">
  <div class="row">
    <div class="col">
      <h4>ユーザー情報編集</h4>
      <div class="row">
        <div class="col-md">
          <%= form_with model: @user, url: users_sign_out_path, method: :patch do |f| %>
            <table class="table">
              <tr>
                <td style="width: 30%; padding-left: 20px;">名前</td>
                <td><%= f.text_field :name %></td>
              </tr>

              <tr>
                <td style="width: 30%; padding-left: 20px;">メールアドレス</td>
                <td><%= f.text_field :email %></td>
                <td></td>
              </tr>
            </table>

            <div class="form-group">
              <%= f.label :profile %>
              <%= f.text_area :profile, class: "form-control profile" %>
            </div>

            <div class="form-group">
              <%= f.label :introduction %>
              <%= f.text_area :introduction, class: "form-control introduction" %>
            </div>

            <%= f.submit "編集内容を保存", class:"btn btn-success" %>
            <%= link_to "退会する", users_check_path, class:"btn btn-danger" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>