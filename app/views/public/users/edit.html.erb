<div class="container">
  <div class="row">
    <div class="col">

      <h4>ユーザー情報編集</h4>
      <div class="row">
        <div class="col-md">

          <%= form_with model:@user, local: true do |f| %>
          <%= render "public/shared/error_messages", resource: f.object %>
            <table class="table">
              <tr>
                <td>アイコン</td>
                <td><%= f.file_field :image %></td>
              </tr>
              <tr>
                <th>ユーザー名</th>
                <td><%= f.text_field :name, autofocus: true, class: "form-control text-input", style: "width:40%" %></td>
              </tr>
              <tr>
                <th>メールアドレス</th>
                <td><%= f.text_field :email, autofocus: true, class: "form-control text-input", style: "width:40%" %></td>
              </tr>
            </table>

            <div class="form-group">
              <%= f.label :'プロフィール' %>
              <%= f.text_area :profile, rows:'8', class: "form-control profile" %>
            </div>

            <div class="form-group">
              <%= f.label :'TRPG詳細' %>
              <%= f.text_area :description, rows:'8', class: "form-control description" %>
            </div>

            <div class="d-flex justify-content-between">
              <div>
                <%= f.submit "編集内容を保存", class:"btn btn-success" %>
                <%= link_to "キャンセル", mypage_path, class: "btn btn-primary" %>
              </div>
              <div>
                <%= link_to "退会する", check_users_path, class:"btn btn-danger" %>
              </div>
            </div>
          <% end %>

        </div>
      </div>

    </div>
  </div>
</div>