<!DOCTYPE html>
<html>
  <head>
    <title>Saicolone</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <script src="https://kit.fontawesome.com/1fccbc9d58.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag('favicon.ico') %>
  </head>

  <body class="d-flex flex-column vh-100">
    <%= render 'layouts/header' %>
      <main class="mb-auto">
        <% if flash[:notice] %>
         <div class="alert alert-success" role="alert">
         <p class="notice text-center" style="color:green; margin-bottom: 0px;"><%= flash[:notice] %></p></div>
        <% end %>
        <% if flash[:alert] %>
         <div class="alert alert-danger" role="alert">
         <p class="alert text-center" style="color:red; margin-bottom: 0px;"><%= flash[:alert] %></p></div>
        <% end %>
        <%= yield %>
      </main>
    <%#= render 'layouts/footer' %>
  </body>
</html>
